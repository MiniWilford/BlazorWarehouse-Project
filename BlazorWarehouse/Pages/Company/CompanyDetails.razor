@page "/CompanyDetails/{CompanyId:int?}"
@using WarehouseModels

@inject HttpClient http



@if (Company is null)
{
    <p>Loading...</p>
}
else
{

    <h3>Company Details</h3>

    <div class="ms-2">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Company Name
            </dt>
            <dd class="col-sm-10">
                @Company.CompanyName
            </dd>
            <dt class="col-sm-2">
                Address
            </dt>
            <dd class="col-sm-10">
                @Company.Address
            </dd>
            <dt class="col-sm-2">
                City
            </dt>
            <dd class="col-sm-10">
                @Company.City
            </dd>
            <dt class="col-sm-2">
                State
            </dt>
            <dd class="col-sm-10">
                @Company.State
            </dd>
            <dt class="col-sm-2">
                Postal Code
            </dt>
            <dd class="col-sm-10">
                @Company.PostalCode
            </dd>
        </dl>
    </div>
    <div class="ms-2">
        <a href="@($"CompanyEdit/{Company.CompanyId}")">Edit </a>|
        <a href="Companies">Back to List</a>
    </div>

}

@code {

    [Parameter]
    public int? CompanyId { get; set; }

    public CompanyViewModel? Company { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Company = await http.GetFromJsonAsync<CompanyViewModel>($"api/Companies/{CompanyId}");
        }
        catch (Exception)
        {

        }

        await base.OnInitializedAsync();
    }

}

